<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	@Html.RenderCssBundle("~/Content/app.css.bundle", BundleOptions.Minified)
</head>
<body>
	<div class="navbar navbar-inverse nav">
		<div class="navbar-inner">
			<div class="container">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
					class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
				</a><a class="brand" href="/">Signal R and Bundler</a>
				<div class="nav-collapse collapse">
					<ul class="nav">
						<li class="divider-vertical"></li>
						<li><a href="#"><i class="icon-home icon-white"></i>Home</a></li>
					</ul>
					<div class="pull-right">
						<ul class="nav pull-right">
							<li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome,
								User <b class="caret"></b></a>
								<ul class="dropdown-menu">
									<li><a href="/user/preferences"><i class="icon-cog"></i>Preferences</a></li>
									<li><a href="/help/support"><i class="icon-envelope"></i>Contact Support</a></li>
									<li class="divider"></li>
									<li><a href="/auth/logout"><i class="icon-off"></i>Logout</a></li>
								</ul>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	@RenderBody()
	@Scripts.Render("~/bundles/jquery")
	@RenderSection("scripts", required: false)
	<script src="~/signalr/hubs"></script>
	@Html.RenderJsBundle("~/Scripts/app.js.bundle", BundleOptions.MinifiedAndCombined)
</body>
</html>
